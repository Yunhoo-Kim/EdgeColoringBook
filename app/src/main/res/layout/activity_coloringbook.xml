<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.hooitis.hoo.edgecoloringbook.vm.MainVM"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryGray"
        android:id="@+id/container_startup">


        <Button
            android:id="@+id/change_drawing_mode"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/change_mode"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/color_select"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:clipToPadding="false"
            adapter="@{viewModel.colorListAdapter}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/change_drawing_mode">
        </android.support.v7.widget.RecyclerView>

        <SeekBar
            android:id="@+id/brush_scale"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:max="10"
            android:progress="5"
            app:layout_constraintTop_toBottomOf="@+id/color_select"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/draw_cont"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/brush_scale"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            scaleFactor="@{viewModel.scaleFactor}">

            <com.hooitis.hoo.edgecoloringbook.ui.paint.ColoringView
                android:id="@+id/paint_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:splitMotionEvents="false"
                brushType="@{viewModel.brushType}"
                drawingMode="@{viewModel.drawingMode}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>
</layout>

